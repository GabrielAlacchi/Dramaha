<div class="player <%= if @turn?, do: "turn" %>" data-stack-size="<%= @player.stack %>">
  <%= live_component(@socket, DramahaWeb.PlayLive.PlayerHandComponent, cards: @cards, selectable?: @selectable?, play_context: @play_context) %>
  <div class="player--stack">
    <p><%= @player.name %></p>
    <%= if @sitting_out? do %>
      <p>(Sitting Out)</p>
    <%= else %>
      <p><%= @stack %></p>
    <% end %>
  </div>
  <%= if @action != nil do %>
    <%= live_component(
      @socket,
      DramahaWeb.PlayLive.ActionComponent,
      action: @action,
      current_hand: @state.current_hand,
      player: @player) %>
  <% end %>
</div>
